<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>
            Provides the following JavaScript libraries for Elsa:
            - lodash
            - moment
        </Description>
        <PackageTags>elsa extension module expressions scripting javascript libraries</PackageTags>
    </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Elsa.Features" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\Elsa.Scripting.JavaScript\Elsa.Scripting.JavaScript.csproj" />
	</ItemGroup>

	<ItemGroup>
      <None Remove="ClientLib\dist\*.js" />
      <EmbeddedResource Include="ClientLib\dist\*.js">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="ClientLib\dist\" />
    </ItemGroup>

</Project>
